<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stryksta.swtorcentral"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.SWTORCentral" >
        <activity
            android:name="com.stryksta.swtorcentral.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.stryksta.swtorcentral.ServerActivity"
            android:label="@string/server_main" >
        </activity>
        <activity
            android:name="com.stryksta.swtorcentral.AdvancedClassActivity"
            android:label="@string/advanced_main" >
        </activity>
        <activity
            android:name="com.stryksta.swtorcentral.SettingsActivity"
            android:label="@string/settings_header" >
        </activity>
        <activity
            android:name="com.stryksta.swtorcentral.ProgressionActivity"
            android:label="@string/progression_main" >
        </activity>
        <activity
            android:name="com.stryksta.swtorcentral.BlankActivity"
            android:label="@string/settings_header" >
        </activity>
        <activity
            android:name="com.stryksta.swtorcentral.PlanetActivity"
            android:label="@string/planet_main" >
        </activity>
        <activity
            android:name="com.stryksta.swtorcentral.AbilityDetailActivity"
            android:label="@string/ability_detail_main" >
        </activity>
        <activity
            android:name="com.stryksta.swtorcentral.CharacterActivity"
            android:label="@string/character_main" >
        </activity>
        <activity
            android:name="com.stryksta.swtorcentral.CharacterAddActivity"
            android:label="@string/character_add_main" >
        </activity>
        <activity
            android:name="com.stryksta.swtorcentral.CharacterEditActivity"
            android:label="@string/character_edit_main" >
        </activity>
        <activity
            android:name="com.stryksta.swtorcentral.AchievementActivity"
            android:label="@string/achievements_main" >
        </activity>
        <activity
            android:name="com.stryksta.swtorcentral.TestActivity"
            android:label="@string/test_main" >
        </activity>
        <activity
            android:name="com.stryksta.swtorcentral.TestRecycleActivity"
            android:label="@string/test_main" >
        </activity>
    </application>

</manifest>