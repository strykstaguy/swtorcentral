<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ablLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp">

    <TextView
        android:id="@+id/ablName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/text"
        android:text="Telekinetic Wave"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ablLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:text="Level Aquired: 10"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/ablName"
        android:layout_alignBottom="@+id/ablName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/ablCastingActivation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:layout_below="@id/ablLevel"
        android:text="Activation: 2.5s"
        android:paddingBottom="5.0dip"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ablResource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ablCastingActivation"
        android:text="Force Cost: 50"
        android:textColor="@color/text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ablChanneled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ablResource"
        android:textColor="@color/text"
        android:text="Channeled: 2"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ablCooldown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ablChanneled"
        android:text="Cooldown: 6s"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ablRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ablCooldown"
        android:text="Range: 30m"
        android:textColor="@color/text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ablDescription"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ablRange"
        android:textColor="@color/text"
        android:text="dfasdfsdfsd"
        android:paddingBottom="5.0dip"
        android:paddingTop="10.0dip"
        android:textSize="12sp" />

</RelativeLayout><!-- From: file:/C:/Users/e9900375/Desktop/SWTORCentral/app/src/main/res/layout/ability_detail_row.xml -->