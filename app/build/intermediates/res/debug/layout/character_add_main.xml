<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar"/>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1" >

    <LinearLayout
        android:id="@+id/CharacterAddLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5.0dip" >

        <LinearLayout
            android:id="@+id/characterdetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5.0dip" >

            <TextView
                android:id="@+id/txtCharacterDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/swtor_blue"
                android:text="@string/character_label"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/txtCharacterDetailSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/subtext"
                android:text="@string/character_label_detail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="14dip" />

        </LinearLayout>

        <LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:padding="5.0dip"
            android:layout_weight="1.0">

        <com.stryksta.swtorcentral.util.FloatLabelLayout
            android:layout_height="wrap_content"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            app:floatLabelTextAppearance="@style/TextAppearance.SWTOR.FloatLabel">

            <EditText
                android:id="@+id/characterName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/character_name_hint"
                android:singleLine="true"
                android:inputType="textNoSuggestions" />

        </com.stryksta.swtorcentral.util.FloatLabelLayout>

        <com.stryksta.swtorcentral.util.FloatLabelLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="16dp"
            app:floatLabelTextAppearance="@style/TextAppearance.SWTOR.FloatLabel">

        <EditText
            android:id="@+id/characterLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/character_level_hint"
            android:singleLine="true"
            android:inputType="number" />

        </com.stryksta.swtorcentral.util.FloatLabelLayout>
        
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5.0dip" >

            <TextView
                android:id="@+id/labelLegacy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/character_legacy_label1"
                android:textColor="@color/black"
                android:textSize="16sp" />

                <EditText
                    android:id="@+id/characterLegacy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:inputType="textNoSuggestions"
                    android:gravity="center"
                    android:hint="@string/character_legacy_hint" />

            <TextView
                android:id="@+id/labelLegacy2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/character_legacy_label2"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/classdetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5.0dip" >

            <TextView
                android:id="@+id/txtClassDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/swtor_blue"
                android:text="@string/character_class_label"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/txtClassDetailSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/subtext"
                android:text="@string/character_label_detail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="14dip" />

        </LinearLayout>

        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:padding="5.0dip" >

            <EditText
                android:id="@+id/characterClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:cursorVisible="false"
                android:inputType="textNoSuggestions"
                android:focusableInTouchMode="false"
                android:hint="@string/character_class_hint" />
            
        </LinearLayout>
        
        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:padding="5.0dip" >

            <EditText
                android:id="@+id/characterAdvancedClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:inputType="textNoSuggestions"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/character_advancedclass_hint" />
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/otherdetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5.0dip" >

            <TextView
                android:id="@+id/txtOtherDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/swtor_blue"
                android:text="@string/character_other_label"
                android:textSize="20dip" />

            <TextView
                android:id="@+id/txtOtherDetailSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/subtext"
                android:text="@string/character_label_detail"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textSize="14dip" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5.0dip" >

            <EditText
                android:id="@+id/characterGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:inputType="textNoSuggestions"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/character_gender_hint" />

        </LinearLayout>

        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:padding="5.0dip" >

            <EditText
                android:id="@+id/characterRace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="left"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/character_race_hint" />
            
        </LinearLayout>
        
        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:padding="5.0dip" >

            <EditText
                android:id="@+id/characterAlignment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/character_alignment_hint" />
            
        </LinearLayout>
        
        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:padding="5.0dip" >

            <EditText
                android:id="@+id/characterCrewSkill1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/character_crew1_hint" />
            
        </LinearLayout>
        
		<LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:padding="5.0dip" >

            <EditText
                android:id="@+id/characterCrewSkill2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/character_crew2_hint" />
            
        </LinearLayout>
        
        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:padding="5.0dip" >

            <EditText
                android:id="@+id/characterCrewSkill3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="left"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/character_crew3_hint" />
            
        </LinearLayout>
        
        <EditText
            android:id="@+id/characterDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/character_description_hint"
            android:inputType="textMultiLine"
            android:layout_marginBottom="10dp"
            android:paddingTop="20dp" />

    </LinearLayout>
 
</ScrollView>
</LinearLayout><!-- From: file:/C:/Users/Josh/Desktop/SWTORCentral/app/src/main/res/layout/character_add_main.xml -->