<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_parent_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar"/>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1" >

    <LinearLayout
        android:id="@+id/CharacterAddLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5.0dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="5.0dip">

                <com.stryksta.swtorcentral.util.FloatLabelLayout
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    app:floatLabelTextAppearance="@style/TextAppearance.SWTOR.FloatLabel">

                    <EditText
                        android:id="@+id/characterName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/character_name_hint"
                        android:singleLine="true"
                        android:inputType="textNoSuggestions" />

                </com.stryksta.swtorcentral.util.FloatLabelLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5.0dip" >

                <com.stryksta.swtorcentral.util.FloatLabelLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    app:floatLabelTextAppearance="@style/TextAppearance.SWTOR.FloatLabel">

                    <EditText
                        android:id="@+id/characterLevel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/character_level_hint"
                        android:singleLine="true"
                        android:cursorVisible="false"
                        android:inputType="number"
                        android:focusable="false" />

                </com.stryksta.swtorcentral.util.FloatLabelLayout>
        
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5.0dip"
            android:gravity="center_vertical">

            <com.stryksta.swtorcentral.util.FloatLabelLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:floatLabelTextAppearance="@style/TextAppearance.SWTOR.FloatLabel">

                <EditText
                    android:id="@+id/characterLegacy"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="center"
                    android:inputType="textNoSuggestions"
                    android:hint="@string/character_legacy_hint" />
            </com.stryksta.swtorcentral.util.FloatLabelLayout>

        </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5.0dip" >

        <com.stryksta.swtorcentral.util.FloatLabelLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:floatLabelTextAppearance="@style/TextAppearance.SWTOR.FloatLabel">

            <EditText
                android:id="@+id/characterClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:inputType="textNoSuggestions"
                android:focusable="false"
                android:hint="@string/character_class_hint" />

        </com.stryksta.swtorcentral.util.FloatLabelLayout>
    </LinearLayout>

        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:padding="5.0dip" >

            <com.stryksta.swtorcentral.util.FloatLabelLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:floatLabelTextAppearance="@style/TextAppearance.SWTOR.FloatLabel">

                <EditText
                    android:id="@+id/characterAdvancedClass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/character_advancedclass_hint"
                    android:singleLine="true"
                    android:cursorVisible="false"
                    android:inputType="textNoSuggestions"
                    android:focusable="false" />

            </com.stryksta.swtorcentral.util.FloatLabelLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5.0dip" >

            <com.stryksta.swtorcentral.util.FloatLabelLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:floatLabelTextAppearance="@style/TextAppearance.SWTOR.FloatLabel">

                <EditText
                    android:id="@+id/characterGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:inputType="textNoSuggestions"
                    android:focusable="false"
                    android:hint="@string/character_gender_hint" />
            </com.stryksta.swtorcentral.util.FloatLabelLayout>

        </LinearLayout>

        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:padding="5.0dip" >

            <com.stryksta.swtorcentral.util.FloatLabelLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:floatLabelTextAppearance="@style/TextAppearance.SWTOR.FloatLabel">

            <EditText
                android:id="@+id/characterRace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:inputType="textNoSuggestions"
                android:focusable="false"
                android:hint="@string/character_race_hint" />

            </com.stryksta.swtorcentral.util.FloatLabelLayout>

        </LinearLayout>
        
        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:padding="5.0dip" >

            <com.stryksta.swtorcentral.util.FloatLabelLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:floatLabelTextAppearance="@style/TextAppearance.SWTOR.FloatLabel">

                <EditText
                    android:id="@+id/characterAlignment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:inputType="textNoSuggestions"
                    android:focusable="false"
                    android:hint="@string/character_alignment_hint" />
            </com.stryksta.swtorcentral.util.FloatLabelLayout>
            
        </LinearLayout>
        
        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:padding="5.0dip" >

            <com.stryksta.swtorcentral.util.FloatLabelLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:floatLabelTextAppearance="@style/TextAppearance.SWTOR.FloatLabel">

                <EditText
                    android:id="@+id/characterCrewSkill1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:inputType="textNoSuggestions"
                    android:focusable="false"
                    android:hint="@string/character_crew1_hint" />
            </com.stryksta.swtorcentral.util.FloatLabelLayout>
            
        </LinearLayout>
        
		<LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:padding="5.0dip" >

            <com.stryksta.swtorcentral.util.FloatLabelLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:floatLabelTextAppearance="@style/TextAppearance.SWTOR.FloatLabel">

                <EditText
                    android:id="@+id/characterCrewSkill2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:inputType="textNoSuggestions"
                    android:focusable="false"
                    android:hint="@string/character_crew2_hint" />
            </com.stryksta.swtorcentral.util.FloatLabelLayout>
            
        </LinearLayout>
        
        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:padding="5.0dip" >

            <com.stryksta.swtorcentral.util.FloatLabelLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:floatLabelTextAppearance="@style/TextAppearance.SWTOR.FloatLabel">

                <EditText
                    android:id="@+id/characterCrewSkill3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cursorVisible="false"
                    android:inputType="textNoSuggestions"
                    android:focusable="false"
                    android:hint="@string/character_crew3_hint" />
            </com.stryksta.swtorcentral.util.FloatLabelLayout>
            
        </LinearLayout>

        <com.stryksta.swtorcentral.util.FloatLabelLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:floatLabelTextAppearance="@style/TextAppearance.SWTOR.FloatLabel">

            <EditText
                android:id="@+id/characterDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="@string/character_description_hint" />
        </com.stryksta.swtorcentral.util.FloatLabelLayout>


    </LinearLayout>
 
</ScrollView>
</LinearLayout><!-- From: file:/C:/Users/Josh/Desktop/SWTORCentral/app/src/main/res/layout/character_add_main.xml -->