<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/material_background" 
    >

    <TextView
        android:id="@+id/title_message"
        style="@style/Widget.SWTOR.Material.Dialog.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
        
    <ImageView 
        android:id="@+id/mSeperator"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/material_seperator"
        android:visibility="gone" />
        
    <FrameLayout
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" 
        >

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/message"
                style="@style/Widget.SWTOR.Material.Dialog.Message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/material_spacing"
                android:layout_marginLeft="@dimen/material_spacing"
                android:layout_marginRight="@dimen/material_spacing"  />
        </ScrollView>

    </FrameLayout>
        
    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginRight="@dimen/material_default_margin"
        android:layout_marginLeft="@dimen/material_default_margin"
        android:layout_marginTop="@dimen/material_default_margin_small"
        android:layout_marginBottom="@dimen/material_default_margin_small" >
                
        <LinearLayout
            android:id="@+id/leftSpacer"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/material_choice_item_padding"
            android:visibility="gone" />
                
        <Button
            android:id="@+id/button2"
            style="@style/Widget.SWTOR.Material.Dialog.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:visibility="visible" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.SWTOR.Material.Dialog.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:maxLines="2" />

        <Button
            android:id="@+id/button1"
            style="@style/Widget.SWTOR.Material.Dialog.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:maxLines="2" />

    </LinearLayout>
</LinearLayout><!-- From: file:/C:/Users/e9900375/Desktop/SWTORCentral/app/src/main/res/layout/material_dialog_layout.xml -->