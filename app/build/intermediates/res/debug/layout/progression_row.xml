<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background"
    android:orientation="vertical">

    <com.stryksta.swtorcentral.util.RoundTimelineHView
        android:id="@+id/timeline"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/swtor_blue"
        app:firstColor="@color/white"
        app:firstSize="10"
        app:lastColor="@color/white"
        app:lastSize="10"
        app:lineColor="@color/white"
        app:lineWidth="5dp"
        app:middleColor="@color/white"
        app:middleSize="10"
        app:timeline_type="line" />

    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-6dp"
        android:paddingBottom="6dp"
        android:background="@color/swtor_blue"
        android:gravity="top|center"
        android:text="@string/test_main"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/txtInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dim_5"
        android:gravity="center">

        <TextView
            android:id="@+id/txtPlanet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text"
            android:text="@string/test_main"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imgPlanet"
            android:layout_width="200.0dip"
            android:layout_height="200.0dip"
            android:layout_marginTop="2.0dip"
            android:clickable="false"
            android:padding="5.0dp"
            android:contentDescription="@string/image_placeholder"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/txtLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/Josh/Desktop/SWTORCentral/app/src/main/res/layout/progression_row.xml -->