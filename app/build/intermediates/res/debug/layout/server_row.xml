<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/serverIcon"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            android:layout_gravity="center"
            android:contentDescription="@string/image_placeholder"
            android:scaleType="fitCenter" />
   		
        <com.stryksta.swtorcentral.util.SizeAdjustingTextView
            android:id="@+id/serverTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/regularcolor" />

        <TextView
            android:id="@+id/serverStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text"
            android:textSize="14sp" />
    </LinearLayout>
</android.support.v7.widget.CardView><!-- From: file:/C:/Users/Josh/Desktop/SWTORCentral/app/src/main/res/layout/server_row.xml -->