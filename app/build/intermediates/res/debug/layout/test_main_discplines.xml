<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtClassTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="5dp"
        android:textColor="@color/text"
        android:text="Jedi Sage"
        android:gravity="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtClassDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="5dp"
        android:textColor="@color/subtext"
        android:gravity="center"
        android:text="Sages are famed for their wisdom as much as for their powerful healing and defensive skills. In troubled times, a Sage brings together the insight of the past with raw power to change the flow of galactic events."
        android:textSize="12sp" />
    <LinearLayout
        android:id="@+id/txtDiscipline1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/txtDiscipline1Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="5dp"
            android:textColor="@color/text"
            android:text="Seer"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDiscipline1Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="5dp"
            android:textColor="@color/text"
            android:text="DPS"
            android:paddingBottom="10dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtDiscipline1Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="5dp"
            android:textColor="@color/text"
            android:text="There is serenity in balance, and no one knows this better than the Balance Sage. Able to assail multiple targets at once while at the same time absorbing their vitality, the Balance Sage is a formidable presence in long-range engagements."
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txtDiscipline2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/txtDiscipline2Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="5dp"
            android:textColor="@color/text"
            android:text="Telekinetics"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDiscipline2Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="5dp"
            android:textColor="@color/text"
            android:text="DPS"
            android:paddingBottom="10dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtDiscipline2Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="5dp"
            android:textColor="@color/text"
            android:text="At one with the environment, the Telekinetic Sage manipulates the essence of the surrounding elements with the power of the Force to mount powerful distance attacks. Waves of turbulence and torrential gusts of telekinetic energy make for a potent combination that can pummel even the toughest adversaries into submission."
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/txtDiscipline3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/txtDiscipline3Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="5dp"
            android:textColor="@color/text"
            android:text="Balance"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDiscipline3Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="5dp"
            android:textColor="@color/text"
            android:text="DPS"
            android:paddingBottom="10dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtDiscipline3Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="5dp"
            android:textColor="@color/text"
            android:text="The Seer Sage is the rejuvenation master of Consulars, assisting with an array of Force healing powers that grant allies the strength to continue though even the harshest of encounters. Separated from the heart of the fray, the Seer can be an unfailing warden to those in need."
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/e9900375/Desktop/SWTORCentral/app/src/main/res/layout/test_main_discplines.xml -->