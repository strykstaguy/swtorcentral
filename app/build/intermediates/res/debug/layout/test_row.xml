<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtTimeLineLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/text"
        android:layout_marginTop="@dimen/dim_10"
        android:textSize="24sp" />

    <com.stryksta.swtorcentral.util.RoundTimelineHView
        android:id="@+id/timeline"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:firstColor="@color/text"
        app:firstSize="5"
        app:lastColor="@color/text"
        app:lastSize="5"
        app:lineColor="@color/text"
        app:lineWidth="5dp"
        app:middleColor="@color/text"
        app:middleSize="5"
        app:timeline_type="line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="5.0dip"
            android:background="@drawable/card_background"
            android:layout_gravity="center" >

            <ImageView
                android:id="@+id/imgPlanet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image_placeholder"
                android:src="@drawable/pl_tython"
                android:background="@android:color/white"/>

            <LinearLayout
                android:id="@+id/txtInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dim_5"
                android:background="@drawable/title_background"
                android:layout_alignBottom="@+id/imgPlanet"
                android:layout_alignLeft="@+id/imgPlanet"
                android:layout_alignStart="@+id/imgPlanet"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txtPlanet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:layout_gravity="left"
                    android:text="Tython"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:layout_gravity="left"
                    android:text="Level 10" />

            </LinearLayout>
        </RelativeLayout>

</LinearLayout>
