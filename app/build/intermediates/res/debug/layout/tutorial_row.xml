<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
   	android:orientation="vertical" >
	
    <FrameLayout
        android:id="@+id/videoframe"
    	android:layout_width="match_parent"
    	android:layout_height="@dimen/image_height"
    	android:layout_gravity="center_horizontal|center_vertical" >

	<ImageView 
        android:id="@+id/imgThumbnail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image_placeholder"
        android:background="@android:color/darker_gray"/>

	<ImageView
    	android:id="@+id/VideoPreviewPlayButton"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:paddingBottom="10dp"
    	android:layout_gravity="center"
    	android:src="@drawable/ic_action_playback_play" />

	</FrameLayout>

     

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/videoframe"
        android:background="@color/swtor_blue"
        android:orientation="vertical" >
		
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="16dp" />
        
        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_weight="0.46"
            android:gravity="center"
            android:textColor="@color/white"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/e9900375/Desktop/swtorcentral/app/src/main/res/layout/tutorial_row.xml -->