<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:elevation="2dp"
        app:cardCornerRadius="2dp"
        app:cardPreventCornerOverlap="false"
        android:foreground="@drawable/card_foreground"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_margin="@dimen/dim_5">

            <LinearLayout
                android:id="@+id/layoutTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/achTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_gravity="left"
                    android:maxLines="2"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_title"
                    android:text="Title"
                    android:layout_toLeftOf="@+id/achRewardPoints"
                    android:fontFamily="sans-serif"/>

                <com.stryksta.swtorcentral.util.AchievementToggle
                    android:id="@+id/achRewardPoints"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:at_text="50"
                    app:at_textSize="20dp"
                    app:at_textColor="@color/swtor_blue"
                    app:at_backgroundColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </LinearLayout>

            <TextView
                android:id="@+id/achDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutTitle"
                android:layout_gravity="left"
                android:paddingLeft="5dp"
                android:textColor="@color/subtext_dark"
                android:text="This is a test description for an achievement, so its jsut for show not for play play"
                android:textSize="@dimen/text_body"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/txtRewardsSep"
                android:layout_below="@+id/achDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/dim_10"
                android:paddingLeft="5dp"
                android:text="Rewards:"
                android:textColor="@color/regularcolor"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/achRewardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtRewardsSep"
                android:layout_gravity="left"
                android:paddingLeft="5dp"
                android:text="Rewards Title"
                android:textColor="@color/regularcolor"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/achRewardFleetRequisition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/achRewardTitle"
                android:layout_gravity="left"
                android:paddingLeft="5dp"
                android:text="Fleet Requisition"
                android:textColor="@color/regularcolor"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/achRewardFleetRequisition"
                android:layout_gravity="left"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:textColor="@color/regularcolor"
                android:text="Status"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>