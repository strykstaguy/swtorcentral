<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/swtor_blue"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/ctlLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/swtor_blue"
            app:expandedTitleTextAppearance="@style/TransparentText"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64dp"
                android:layout_marginRight="64dp"
                android:layout_marginTop="?actionBarSize"
                android:fitsSystemWindows="true"
                android:orientation="vertical"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/advImage"
                    android:layout_width="@dimen/fab_large"
                    android:layout_height="@dimen/fab_large"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ac_sage_light"
                    android:background="@drawable/advanced_class"
                    android:padding="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/dim_40"
                    >

                    <TextView
                        android:id="@+id/advClass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:textSize="36sp"
                        android:text="Header"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/advMainClass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:text="Subheader"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_overlapTop="35dp"
        android:layout_marginLeft="@dimen/dim_10"
        android:layout_marginRight="@dimen/dim_10"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
        android:layout_gravity="fill_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                card_view:cardElevation="2dp"
                card_view:cardCornerRadius="2dp"
                android:clickable="true"
                android:foreground="@drawable/card_foreground"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtAdvDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="@color/text"
                    android:gravity="center"
                    android:text="@string/test_profile_desc"
                    android:textSize="14sp"
                    android:layout_margin="10dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:padding="2dp"
                        android:layout_marginLeft="@dimen/dim_5"
                        android:layout_marginRight="@dimen/dim_5"
                        android:background="#f3f3f3"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingTop="@dimen/dim_10"
                    android:paddingBottom="@dimen/dim_10"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageButton
                            android:id="@+id/imgDisciplines1"
                            android:layout_width="@dimen/fab_normal"
                            android:layout_height="@dimen/fab_normal"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:padding="8dp"
                            android:background="@drawable/round"
                            android:elevation="3dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_healer_white"/>

                        <TextView
                            android:id="@+id/txtDiscipline1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:textColor="@color/subheader"
                            android:text="Seer"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageButton
                            android:id="@+id/imgDisciplines2"
                            android:layout_width="@dimen/fab_normal"
                            android:layout_height="@dimen/fab_normal"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:padding="8dp"
                            android:background="@drawable/round"
                            android:elevation="3dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_damage_white"/>

                        <TextView
                            android:id="@+id/txtDiscipline2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:textColor="@color/subheader"
                            android:text="Telekinetics"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <ImageButton
                            android:id="@+id/imgDisciplines3"
                            android:layout_width="@dimen/fab_normal"
                            android:layout_height="@dimen/fab_normal"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:padding="8dp"
                            android:background="@drawable/round"
                            android:elevation="3dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_tank_white"/>

                        <TextView
                            android:id="@+id/txtDiscipline3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:textColor="@color/subheader"
                            android:text="Balance"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal" />

                    </LinearLayout>

                </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/txtDetailsSep"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/text"
                android:background="@android:color/transparent"
                android:text="Details"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/txtRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/text"
                        android:layout_gravity="left"
                        android:text="Role:"
                        android:textSize="14sp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txtRoleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/text"
                        android:text="Damage, Healer"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/txtArmor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/text"
                        android:layout_gravity="left"
                        android:text="Armor:"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:gravity="left" />

                    <TextView
                        android:id="@+id/txtArmorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/text"
                        android:text="Light"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/txtWeapons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/text"
                        android:layout_gravity="left"
                        android:text="Weapons:"
                        android:textSize="14sp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txtWeaponsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/text"
                        android:text="Lightsaber"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp" >

                    <TextView
                        android:id="@+id/txtAttribute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/text"
                        android:layout_gravity="left"
                        android:text="Attribute:"
                        android:textSize="14sp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txtAttributeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/text"
                        android:text="Willpower"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txtCompanionsSep"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/text"
                android:background="@android:color/transparent"
                android:text="Original Companions"
                android:textSize="16sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/companionsList"
                android:layout_width="match_parent"
                android:layout_below="@+id/toolbar"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:scrollbars="none" />

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>