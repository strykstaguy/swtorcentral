<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView
                    android:id="@+id/image_banner"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:id="@+id/whitebar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="8.0dip"
                    android:background="@color/white"
                    android:layout_alignBottom="@+id/image_banner">

                </LinearLayout>
            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_gravity="fill_vertical">

        <LinearLayout
            android:id="@+id/serverLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtAdvDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:textColor="@color/text"
                android:gravity="center"
                android:text="Sages are famed for their wisdom as much as for their powerful healing and defensive skills. In troubled times, a Sage brings together the insight of the past with raw power to change the flow of galactic events."
                android:textSize="14sp"
                android:layout_margin="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="@dimen/dim_10"
                android:paddingBottom="@dimen/dim_10"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/imgDisciplines1"
                        android:layout_width="@dimen/fab_normal"
                        android:layout_height="@dimen/fab_normal"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:padding="8dp"
                        android:background="@drawable/round"
                        android:elevation="3dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_healer_white"/>

                    <TextView
                        android:id="@+id/txtDiscipline1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/subheader"
                        android:text="Seer"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/imgDisciplines2"
                        android:layout_width="@dimen/fab_normal"
                        android:layout_height="@dimen/fab_normal"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:padding="8dp"
                        android:background="@drawable/round"
                        android:elevation="3dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_damage_white"/>

                    <TextView
                        android:id="@+id/txtDiscipline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/subheader"
                        android:text="Telekinetics"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/imgDisciplines3"
                        android:layout_width="@dimen/fab_normal"
                        android:layout_height="@dimen/fab_normal"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:padding="8dp"
                        android:background="@drawable/round"
                        android:elevation="3dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_tank_white"/>

                    <TextView
                        android:id="@+id/txtDiscipline3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/subheader"
                        android:text="Balance"
                        android:textSize="14sp"
                        android:layout_gravity="center_horizontal" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txtDetailsSep"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/subheader"
                android:background="@android:color/transparent"
                android:text="Details"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/txtRole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/text"
                        android:layout_gravity="left"
                        android:text="Role:"
                        android:textSize="14sp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txtRoleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/text"
                        android:text="Damage, Healer"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/txtArmor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/text"
                        android:layout_gravity="left"
                        android:text="Armor:"
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:gravity="left" />

                    <TextView
                        android:id="@+id/txtArmorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/text"
                        android:text="Light"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/txtWeapons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/text"
                        android:layout_gravity="left"
                        android:text="Weapons:"
                        android:textSize="14sp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txtWeaponsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/text"
                        android:text="Lightsaber"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp" >

                    <TextView
                        android:id="@+id/txtAttribute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/text"
                        android:layout_gravity="left"
                        android:text="Attribute:"
                        android:textSize="14sp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txtAttributeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:textColor="@color/text"
                        android:text="Willpower"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txtCompanionsSep"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:singleLine="true"
                android:textAllCaps="true"
                android:textColor="@color/subheader"
                android:background="@android:color/transparent"
                android:text="Details"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.stryksta.swtorcentral.util.NonScrollListView
                android:id="@+id/companionsListView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:divider="@color/gray"
                android:background="@drawable/card"
                android:dividerHeight="1px"
                android:clickable="true" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="@dimen/fab_large"
        android:layout_height="@dimen/fab_large"
        android:layout_margin="@dimen/dim_5"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_class_consular"
        android:background="@drawable/advanced_class"
        android:padding="8dp"
        android:translationZ="10dp"
        app:layout_anchor="@id/whitebar"
        app:layout_anchorGravity="top|center"
        app:layout_behavior="com.stryksta.swtorcentral.util.ImageBehavior" />


</android.support.design.widget.CoordinatorLayout>