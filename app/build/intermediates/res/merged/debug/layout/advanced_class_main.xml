<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/serverLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/txtAdvDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_margin="10dp"
        android:textColor="@color/text"
        android:gravity="center"
        android:text="Sages are famed for their wisdom as much as for their powerful healing and defensive skills. In troubled times, a Sage brings together the insight of the past with raw power to change the flow of galactic events."
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/dim_10"
        android:paddingBottom="@dimen/dim_10"
        android:gravity="center">

        <Button
            android:id="@+id/btnDisciplines1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:background="@drawable/swtor_button_gray_flat"
            android:text="Seer"
            android:drawableLeft="@drawable/ic_action_database"
            android:textColor="@color/text"
            android:textSize="10sp"/>

        <ImageButton
            android:id="@+id/activity_detail_fab_download"
            android:layout_width="@dimen/fab_small"
            android:layout_height="@dimen/fab_small"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:background="@drawable/round"
            android:elevation="3dp"
            android:src="@drawable/ic_book"
            android:scaleX="0"
            android:scaleY="0"
            android:stateListAnimator="@anim/fab_animation"
            android:transitionName="fab"/>

        <Button
            android:id="@+id/btnDisciplines2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:background="@drawable/swtor_button_gray_flat"
            android:text="Telekinetics"
            android:drawableLeft="@drawable/ic_action_database"
            android:textColor="@color/text"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/btnDisciplines3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_margin="2dp"
            android:background="@drawable/swtor_button_gray_flat"
            android:text="Balance"
            android:drawableLeft="@drawable/ic_action_database"
            android:textColor="@color/text"
            android:textSize="10sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtDetailsSep"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textAllCaps="true"
        android:textColor="@color/text"
        android:text="Details"
        android:textSize="14sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/detailsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:elevation="2dp"
        app:cardPreventCornerOverlap="false"
        android:foreground="@drawable/card_foreground"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/txtRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="@color/text"
                    android:layout_gravity="left"
                    android:text="Role:"
                    android:textSize="14sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtRoleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="@color/text"
                    android:text="Damage, Healer"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/txtArmor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="@color/text"
                    android:layout_gravity="left"
                    android:text="Armor:"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:gravity="left" />

                <TextView
                    android:id="@+id/txtArmorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="@color/text"
                    android:text="Light"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp">

                <TextView
                    android:id="@+id/txtWeapons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="@color/text"
                    android:layout_gravity="left"
                    android:text="Weapons:"
                    android:textSize="14sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtWeaponsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="@color/text"
                    android:text="Lightsaber"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp" >

                <TextView
                    android:id="@+id/txtAttribute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="@color/text"
                    android:layout_gravity="left"
                    android:text="Attribute:"
                    android:textSize="14sp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txtAttributeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="@color/text"
                    android:text="Willpower"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/txtCompanionsSep"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textAllCaps="true"
        android:textColor="@color/text"
        android:text="Details"
        android:textSize="14sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/companionCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:elevation="2dp"
        app:cardPreventCornerOverlap="false"
        android:foreground="@drawable/card_foreground"
        app:cardBackgroundColor="@color/white">

        <com.stryksta.swtorcentral.util.NonScrollListView
            android:id="@+id/companionsListView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:divider="@color/gray"
            android:background="@drawable/card"
            android:dividerHeight="1px"
            android:clickable="true" />
    </android.support.v7.widget.CardView>
</LinearLayout>