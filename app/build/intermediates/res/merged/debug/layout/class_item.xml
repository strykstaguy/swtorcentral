<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

<android.support.v7.widget.CardView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="2dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardPreventCornerOverlap="false">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5.0dip">

        <TextView
            android:id="@+id/txtClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/text"
            android:text="Jedi Consular"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="@dimen/dim_5"
            android:textColor="@color/text"
            android:gravity="center"
            android:text="A master of the secrets of the Force, the Jedi Consular is both fighter and healer, teacher and student. The Force can be used to cloud the minds of the weak, restore strength to the fallen and hurl both opponents and objects through the air."
            android:textSize="16sp"
            android:layout_below="@+id/txtClass" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:baselineAligned="false"
        android:background="@color/white"
        android:layout_below="@+id/txtDesc"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/AdvClass1"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgClass1"
                android:layout_width="@dimen/fab_normal"
                android:layout_height="@dimen/fab_normal"
                android:padding="8dp"
                android:background="@drawable/round"
                android:elevation="3dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ac_sage_light"/>

            <TextView
                android:id="@+id/txtClass1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:gravity="center"
                android:text="Jedi Sage"
                android:textSize="14sp"
                android:textColor="@color/text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/AdvClass2"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgClass2"
                android:layout_width="@dimen/fab_normal"
                android:layout_height="@dimen/fab_normal"
                android:padding="8dp"
                android:background="@drawable/round"
                android:elevation="3dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ac_shadow_light"/>

            <TextView
                android:id="@+id/txtClass2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dip"
                android:gravity="center"
                android:text="Jedi Shadow"
                android:textSize="14sp"
                android:textColor="@color/text" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
</android.support.v7.widget.CardView>

</LinearLayout>