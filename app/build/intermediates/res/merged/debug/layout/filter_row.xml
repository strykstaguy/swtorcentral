<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:layout_margin="@dimen/dim_10"
    android:orientation="horizontal">

    <com.stryksta.swtorcentral.ui.views.chipcloud.Chip
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dim_5"
        android:text="Achivements: Datacrons"
        android:textSize="14sp"
        app:chipCornerRadius="2dp"
        app:chipLabelColor="@color/swtor_blue_dark"
        app:chipLabelSelectedColor="@color/white"
        app:chipLabelFontColor="@color/white"
        app:chipLabelSelectedFontColor="@color/swtor_blue"/>
</LinearLayout>