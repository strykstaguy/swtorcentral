<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <com.stryksta.swtorcentral.ui.views.timeline.RoundTimelineView
            android:id="@+id/timeline"
            android:layout_width="30dp"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            app:firstColor="@color/md_grey_700"
            app:firstSize="15"
            app:lastColor="@color/md_grey_700"
            app:lastSize="15"
            app:lineColor="@color/md_grey_700"
            app:lineWidth="10dp"
            app:middleColor="@color/md_grey_700"
            app:middleSize="0"
            app:timeline_type="line" />

    </LinearLayout>

    <com.stryksta.swtorcentral.ui.views.timeline.RoundTimelineView
        android:id="@+id/timeline2"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        app:firstColor="@color/md_grey_600"
        app:firstSize="15"
        app:lastColor="@color/md_grey_600"
        app:lastSize="15"
        app:lineColor="@color/md_grey_600"
        app:lineWidth="10dp"
        app:middleColor="@color/md_grey_600"
        app:middleSize="0"
        app:timeline_type="line" />
</LinearLayout>