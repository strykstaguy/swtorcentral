<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text"
        android:text="Tython"
        android:textSize="24sp" />

    <com.stryksta.swtorcentral.util.timeline.RoundTimelineView
        android:id="@+id/timeline"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        app:firstColor="@color/md_grey_700"
        app:firstSize="15"
        app:lastColor="@color/md_grey_700"
        app:lastSize="15"
        app:lineColor="@color/md_grey_700"
        app:lineWidth="10dp"
        app:middleColor="@color/md_grey_700"
        app:middleSize="15"
        app:timeline_type="line" />

</LinearLayout>