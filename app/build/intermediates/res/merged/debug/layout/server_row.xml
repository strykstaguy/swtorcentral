<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardElevation="2dp"
        app:cardCornerRadius="2dp"
        android:clickable="true"
        android:foreground="@drawable/card_foreground"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:id="@+id/serverBackground"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dim_10"
            android:paddingBottom="@dimen/dim_10"
            android:paddingRight="@dimen/dim_5"
            android:paddingLeft="@dimen/dim_5">


            <ImageView
                android:id="@+id/serverStatusIcon"
                android:layout_width="@dimen/fab_normal"
                android:layout_height="@dimen/fab_normal"
                android:layout_marginLeft="@dimen/dim_10"
                android:src="@drawable/ic_arrow_up"
                android:scaleType="fitXY"
                android:tint="@color/white"
                android:layout_centerVertical="true"/>

            <com.stryksta.swtorcentral.util.SizeAdjustingTextView
                android:id="@+id/serverTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dim_20"
                android:gravity="left"
                android:layout_toRightOf="@id/serverStatusIcon"
                android:maxLines="1"
                android:text="The Shadowlands"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/serverType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="@dimen/dim_20"
                android:text="PvE"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_below="@+id/serverTitle"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/serverStatusIcon"
                android:layout_toEndOf="@+id/serverStatusIcon" />

            <TextView
                android:id="@+id/serverZone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="@dimen/dim_20"
                android:text="West"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_below="@+id/serverStatusIcon"
                android:layout_alignLeft="@+id/serverPopulation"
                android:layout_alignStart="@+id/serverPopulation"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/serverPopulation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="@dimen/dim_10"
                android:text="Light"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_below="@+id/serverStatusIcon"
                android:layout_toRightOf="@+id/serverStatusIcon"
                android:layout_toEndOf="@+id/serverStatusIcon" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>