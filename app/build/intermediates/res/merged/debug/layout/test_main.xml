<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/background" >

    <include layout="@layout/toolbar"/>

    <TextView
        android:id="@+id/txtPrologue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text"
        android:text="Prologue"
        android:textSize="24sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/background" >

    <com.stryksta.swtorcentral.util.timeline.RoundTimelineView
        android:id="@+id/tmlPrologue1"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        app:firstColor="@color/md_grey_700"
        app:firstSize="7"
        app:lineColor="@color/md_grey_700"
        app:lineWidth="5dp"
        app:timeline_type="start" />

    <com.stryksta.swtorcentral.util.timeline.RoundTimelineView
        android:id="@+id/tmlPrologue2"
        android:layout_width="30dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        app:firstColor="@color/md_grey_700"
        app:firstSize="7"
        app:lineColor="@color/md_grey_700"
        app:lineWidth="5dp"
        app:timeline_type="start" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/background">

        <LinearLayout
            android:id="@+id/doubleLinearLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/background" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/linearLayout2"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/timelineRepublic"
                android:layout_toEndOf="@+id/timelineRepublic"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgPlanet2"
                    android:layout_width="75.0dip"
                    android:layout_height="75.0dip"
                    android:clickable="false"
                    android:contentDescription="@string/image_placeholder"
                    android:src="@drawable/pl_korriban"
                    android:scaleType="fitCenter"/>

                <com.stryksta.swtorcentral.util.bubbleview.BubbleLinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dim_5"
                    app:arrowWidth="0dp"
                    app:angle="0dp"
                    app:arrowHeight="0dp"
                    app:bubbleColor="@color/swtor_blue"
                    android:id="@+id/bubble_layoutsdfsdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtPlanetsdfasdfsdf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Korriban"
                        android:gravity="left"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/txtLevelasdfsdfasdf"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="Levels 1 - 10"
                        android:gravity="left"
                        android:textSize="12sp"
                        android:layout_gravity="center_horizontal"/>

                </com.stryksta.swtorcentral.util.bubbleview.BubbleLinearLayout>
            </LinearLayout>

            <com.stryksta.swtorcentral.util.timeline.RoundTimelineView
                android:id="@+id/timeline"
                android:layout_width="30dp"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                app:firstColor="@color/md_grey_700"
                app:firstSize="7"
                app:lastColor="@color/md_grey_700"
                app:lastSize="7"
                app:lineColor="@color/md_grey_700"
                app:lineWidth="5dp"
                app:middleColor="@color/md_grey_700"
                app:middleSize="7"
                app:timeline_type="middle"
                android:layout_centerHorizontal="true" />

            <com.stryksta.swtorcentral.util.timeline.RoundTimelineView
                android:id="@+id/timelineRepublic"
                android:layout_width="30dp"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@+id/timeline"
                app:firstColor="@color/md_grey_700"
                app:firstSize="7"
                app:lastColor="@color/md_grey_700"
                app:lastSize="7"
                app:lineColor="@color/md_grey_700"
                app:lineWidth="5dp"
                app:middleColor="@color/md_grey_700"
                app:middleSize="7"
                app:timeline_type="middle"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/linearLayout"
                android:layout_alignRight="@+id/doubleLinearLayout"
                android:layout_alignEnd="@+id/doubleLinearLayout"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgPlanet"
                    android:layout_width="75.0dip"
                    android:layout_height="75.0dip"
                    android:clickable="false"
                    android:contentDescription="@string/image_placeholder"
                    android:src="@drawable/pl_tython"
                    android:scaleType="fitCenter"/>

                <com.stryksta.swtorcentral.util.bubbleview.BubbleLinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/dim_5"
                    app:arrowWidth="0dp"
                    app:angle="0dp"
                    app:arrowHeight="0dp"
                    app:bubbleColor="@color/swtor_blue"
                    android:id="@+id/bubble_ldfgsdfgayoutsdfsdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtPlanetsdfadfgsdfgsdfsdf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tython"
                        android:gravity="left"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/txtLevelsdfgsdfgasdfsdfasdf"
                        android:layout_width="wrap_content"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:text="Levels 1 - 10"
                        android:gravity="left"
                        android:textSize="12sp"
                        android:layout_gravity="center_horizontal"/>

                </com.stryksta.swtorcentral.util.bubbleview.BubbleLinearLayout>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <com.stryksta.swtorcentral.util.TimeLineConnector
        android:id="@+id/test"
        android:layout_width="35dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:layout_marginLeft="-0.9dp"
        android:layout_marginTop="-1dp"
        app:timeline_orientation="horizontal"
        app:timeline_lineColor="@color/md_grey_700"
        app:timeline_lineSize="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/singleLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/background" >

    <com.stryksta.swtorcentral.util.timeline.RoundTimelineView
        android:id="@+id/timelineRepublicsdfasdf"
        android:layout_width="35dp"
        android:layout_height="135dp"
        android:layout_gravity="center_horizontal"
        app:firstColor="@color/md_grey_700"
        app:firstSize="7"
        app:lastColor="@color/md_grey_700"
        app:lastSize="7"
        app:lineColor="@color/md_grey_700"
        app:lineWidth="5dp"
        app:middleColor="@color/md_grey_700"
        app:middleSize="7"
        app:timeline_type="middle"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayoutd"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_10"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgPlanetsdf"
            android:layout_width="75.0dip"
            android:layout_height="75.0dip"
            android:clickable="false"
            android:contentDescription="@string/image_placeholder"
            android:src="@drawable/pl_korriban"
            android:scaleType="fitCenter"/>

        <com.stryksta.swtorcentral.util.bubbleview.BubbleLinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dim_5"
            app:arrowWidth="0dp"
            app:angle="0dp"
            app:arrowHeight="0dp"
            app:bubbleColor="@color/swtor_blue"
            android:id="@+id/bubble_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtPlanetsdfa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ksdfasdfasdorriban"
                android:gravity="left"
                android:paddingRight="@dimen/dim_20"
                android:paddingLeft="@dimen/dim_20"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/txtLevelasdf"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Levels 1 - 10"
                android:gravity="left"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"/>

        </com.stryksta.swtorcentral.util.bubbleview.BubbleLinearLayout>


    </LinearLayout>
    </RelativeLayout>
</LinearLayout>