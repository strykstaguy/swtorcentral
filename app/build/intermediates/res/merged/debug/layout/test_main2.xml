<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <com.github.chaossss.widget.view.CircleBadgedView
        android:id="@+id/badge_circle_view"
        android:layout_width="@dimen/fab_large"
        android:layout_height="@dimen/fab_large"
        android:foreground="?selectableItemBackground"
        app:badgeTextColor="@color/white"
        app:circlebadgeGravity="top|left"
        app:badgeColor="@color/swtor_red"
        app:badgeText="50">

        <ImageButton
            android:id="@+id/comImage2"
            android:layout_width="@dimen/fab_normal"
            android:layout_height="@dimen/fab_normal"
            android:padding="8dp"
            android:background="@drawable/round"
            android:elevation="3dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_abilities" />

    </com.github.chaossss.widget.view.CircleBadgedView>
</LinearLayout>