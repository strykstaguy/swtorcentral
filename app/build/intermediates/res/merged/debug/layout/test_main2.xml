<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_height="4dp"
        android:layout_width="150dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/cardview_background_top">
    </LinearLayout>

    <LinearLayout
        android:layout_height="25dp"
        android:layout_width="150dp"
        android:gravity="center"
        android:background="@drawable/cardview_background_center">
    </LinearLayout>

    <LinearLayout
        android:layout_height="4dp"
        android:layout_width="150dp"
        android:gravity="center"
        android:background="@drawable/cardview_background_bottom">
    </LinearLayout>


    <com.stryksta.swtorcentral.ui.views.timeline.RoundTimelineView
        android:id="@+id/timeline1"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        app:firstColor="@color/md_grey_600"
        app:firstSize="15"
        app:lastColor="@color/md_grey_600"
        app:lastSize="15"
        app:lineColor="@color/md_grey_600"
        app:lineWidth="10dp"
        app:middleColor="@color/md_grey_600"
        app:middleSize="0"
        app:timeline_type="line" />

    <android.support.v7.widget.CardView
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        app:cardElevation="2dp"
        app:cardCornerRadius="2dp"
        app:cardPreventCornerOverlap="false">

    </android.support.v7.widget.CardView>

    <com.stryksta.swtorcentral.ui.views.timeline.RoundTimelineView
        android:id="@+id/timeline2"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginTop="-3dp"
        android:layout_gravity="center_horizontal"
        app:firstColor="@color/md_grey_600"
        app:firstSize="15"
        app:lastColor="@color/md_grey_600"
        app:lastSize="15"
        app:lineColor="@color/md_grey_600"
        app:lineWidth="10dp"
        app:middleColor="@color/md_grey_600"
        app:middleSize="0"
        app:timeline_type="line" />

</LinearLayout>