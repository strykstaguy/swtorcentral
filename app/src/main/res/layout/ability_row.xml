<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ablLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="2dp"
        android:clickable="true"
        android:foreground="@drawable/card_foreground"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/ablName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/text"
        android:text="Telekinetic Wave"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ablLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:text="Level: 10"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/ablName"
        android:layout_alignBottom="@+id/ablName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/ablCastingActivation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:layout_below="@id/ablLevel"
        android:text="Activation: 2.5s"
        android:paddingBottom="5.0dip"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ablChanneled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:layout_below="@id/ablCastingActivation"
        android:text="Channeled: 3s"
        android:paddingBottom="5.0dip"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ablResource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ablChanneled"
        android:text="Force Cost: 50"
        android:textColor="@color/text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/ablCooldown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ablResource"
        android:textColor="@color/text"
        android:text="Cooldown: 6s"
        android:textSize="12sp" />

        <TextView
            android:id="@+id/ablRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ablCooldown"
            android:text="Range: 30m"
            android:textColor="@color/text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ablDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ablRange"
            android:textColor="@color/text"
            android:text="dfasdfsdfsd"
            android:paddingBottom="5.0dip"
            android:paddingTop="10.0dip"
            android:textSize="12sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>