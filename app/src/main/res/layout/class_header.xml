<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
   	android:layout_height="match_parent"
   	android:layout_gravity="center"
    android:background="@color/background"
    android:orientation="vertical" >

	<TextView
        android:id="@+id/txtClass"
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:gravity="center"
		android:paddingLeft="16dp"
		android:singleLine="true"
		android:textAllCaps="true"
		android:textColor="@color/text"
		android:text="@string/test_main"
		android:textSize="16sp"
		android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textColor="@color/text"
        android:gravity="center"
        android:text="Sages are famed for their wisdom as much as for their powerful healing and defensive skills. In troubled times, a Sage brings together the insight of the past with raw power to change the flow of galactic events."
        android:textSize="14sp"
        android:layout_margin="10dp" />
 	
</LinearLayout>