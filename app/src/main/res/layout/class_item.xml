<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="2dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardUseCompatPadding="true">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5.0dip"
    android:orientation="vertical">

        <TextView
            android:id="@+id/txtClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textColor="@color/text"
            android:text="@string/test_main"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="@color/text"
            android:gravity="center"
            android:text="Sages are famed for their wisdom as much as for their powerful healing and defensive skills. In troubled times, a Sage brings together the insight of the past with raw power to change the flow of galactic events."
            android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10.0dip"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/AdvClass1"
                        android:layout_width="wrap_content"
                       android:layout_height="fill_parent"
                       android:gravity="center"
                       android:padding="5.0dip"
                       android:layout_marginRight="10dp"
                       android:orientation="vertical">

                     <ImageButton
                         android:id="@+id/imgClass1"
                         android:layout_width="@dimen/fab_large"
                         android:layout_height="@dimen/fab_large"
                         android:padding="15dp"
                         android:background="@drawable/round"
                         android:elevation="3dp"
                         android:layout_gravity="center"
                         android:scaleType="fitCenter"
                         android:src="@drawable/ac_sage_light"/>

                     <TextView
                        android:id="@+id/txtClass1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15.0dip"
                        android:layout_marginTop="2.0dip"
                        android:gravity="center"
                        android:text="@string/test_main"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:textColor="@android:color/black" />
 	                </LinearLayout>

 	<LinearLayout
 	  android:id="@+id/AdvClass2"
      android:layout_width="wrap_content"
      android:layout_height="fill_parent"
      android:gravity="center"
      android:padding="5.0dip"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/AdvClass1"
        android:layout_toEndOf="@+id/AdvClass1">

       <ImageButton
            android:id="@+id/imgClass2"
            android:layout_width="@dimen/fab_large"
            android:layout_height="@dimen/fab_large"
            android:padding="15dp"
            android:background="@drawable/round"
            android:elevation="3dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/ac_shadow_light"/>

    <TextView
       android:id="@+id/txtClass2"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="15.0dip"
       android:layout_marginTop="2.0dip"
        android:text="@string/test_main"
       android:gravity="center"
       android:textAppearance="?android:textAppearanceMedium"
       android:textColor="@android:color/black" />
 	</LinearLayout>
</RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>