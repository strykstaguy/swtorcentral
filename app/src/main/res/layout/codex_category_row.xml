<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false"
        android:layout_marginRight="@dimen/dim_10"
        android:layout_marginLeft="@dimen/dim_10"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:elevation="2dp"
        app:cardCornerRadius="2dp"
        android:clickable="true"
        app:cardBackgroundColor="@android:color/white"
        android:background="@android:color/transparent"
        android:foreground="@drawable/card_foreground">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5.0dip">

            <ImageButton
                android:id="@+id/imgCodex"
                android:layout_width="@dimen/fab_normal"
                android:layout_height="@dimen/fab_normal"
                android:padding="8dp"
                android:background="@drawable/round"
                android:elevation="3dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitCenter"
                android:src="@drawable/class_jedi_consular"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/txtCodexCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:textColor="@color/black"
                android:text="Achievement: Datacrons"
                android:textSize="@dimen/md_text_title"
                android:fontFamily="sans-serif"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginBottom="@dimen/dim_5"
                android:gravity="center"
                android:text="This is just a placeholder for a description"
                android:textSize="@dimen/md_text_body"
                android:textColor="@color/subtext_dark"
                android:layout_below="@+id/txtCodexCategory"
                android:layout_toRightOf="@+id/imgCodex"
                android:layout_toEndOf="@+id/imgCodex"
                android:fontFamily="sans-serif-light"
                android:textIsSelectable="false"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>