<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_margin="8dp"
        android:padding="@dimen/dim_5"
        android:elevation="2dp"
        app:cardCornerRadius="2dp"
        android:foreground="@drawable/card_foreground"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dim_5"
            android:gravity="center">

            <ImageButton
                android:id="@+id/dtcIcon"
                android:layout_width="@dimen/fab_small"
                android:layout_height="@dimen/fab_small"
                android:layout_gravity="center"
                android:elevation="2dp"
                android:background="@drawable/round"
                android:contentDescription="@string/image_placeholder"
                android:src="@drawable/ic_datacron"
                android:tint="@color/white"
                android:padding="4dp"
                android:scaleType="fitXY"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/dtcName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/dim_5"
                android:text="Endurance +2"
                android:ellipsize="none"
                android:singleLine="false"
                android:textColor="@color/text"
                android:textSize="12sp"
                android:layout_below="@+id/dtcIcon"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>