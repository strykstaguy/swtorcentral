<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >
    
     <ImageView 
        android:id="@+id/imgThumbnail"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image_placeholder"
        android:src="@drawable/bountycontractweek"
        android:background="@android:color/darker_gray"/>
     
    <LinearLayout
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imgThumbnail"
        android:background="@drawable/title_background"
        android:orientation="horizontal" >

       <TextView 
       		android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:textSize="@dimen/tex_size_large"
            android:textColor="@color/swtor_green"
            
            android:textStyle="bold" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/txtEventDates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/imgThumbnail"
        android:layout_alignParentLeft="true"
        android:background="@drawable/title_background">
       <TextView 
            android:id="@+id/txtDates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:textSize="@dimen/tex_size_normal"
            android:textColor="@color/white"
            android:layout_gravity="left"
   			android:gravity="center"
            android:text="JUNE 10 â€“ 17, BEGINS AND ENDS AT 5AM PDT/12PM GMT" />
    </LinearLayout>
    <ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/txtEventDates" >
    
    <TextView 
            android:id="@+id/textEventinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:textSize="@dimen/tex_size_normal"
            android:textColor="@color/black" />
	</ScrollView>
</RelativeLayout>
</LinearLayout>