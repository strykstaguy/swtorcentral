<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/dim_10"
    android:background="@color/background"
    android:layout_gravity="center" >

    <TextView
        android:textSize="20.0dip"
        android:textColor="@color/text"
        android:id="@+id/txtFaction"
        android:gravity="center"
        android:text="@string/faction"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
      android:id="@+id/layoutRepublic"
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:layout_marginBottom="20dp"
      android:gravity="center"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/imgRepublicBG"
        android:layout_width="256.0dip"
        android:layout_height="256.0dip"
        android:clickable="false"
        android:layout_gravity="center"
        android:src="@drawable/light_side"
        android:contentDescription="@string/image_placeholder"
        android:scaleType="fitCenter"
          android:layout_below="@+id/txtRepublic"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/imgRepublic"
            android:layout_width="@dimen/fab_large"
            android:layout_height="@dimen/fab_large"
            android:padding="8dp"
            android:background="@drawable/round"
            android:elevation="3dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_republic"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgRepublicBG"
            android:layout_toEndOf="@+id/imgRepublicBG" />

      <TextView
        android:id="@+id/txtRepublic"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:layout_marginTop="2.0dip"
        android:gravity="center"
        android:text="@string/republic"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/text" />
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/layoutEmpire"
      android:layout_width="fill_parent"
      android:layout_height="0dp"
      android:layout_gravity="center"
      android:layout_weight="1"
      android:gravity="center"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/imgEmpireBG"
        android:layout_width="256.0dip"
        android:layout_height="256.0dip"
        android:clickable="false"
        android:src="@drawable/dark_side"
        android:layout_gravity="center"
        android:contentDescription="@string/image_placeholder"
        android:scaleType="fitCenter"
          android:layout_alignParentTop="true"
          android:layout_alignParentRight="true"
          android:layout_alignParentEnd="true" />

      <ImageButton
          android:id="@+id/imgEmpire"
          android:layout_width="@dimen/fab_large"
          android:layout_height="@dimen/fab_large"
          android:padding="8dp"
          android:background="@drawable/round_red"
          android:elevation="3dp"
          android:layout_gravity="center"
          android:scaleType="fitCenter"
          android:src="@drawable/ic_empire"
          android:layout_centerVertical="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true" />

      <TextView
        android:id="@+id/txtEmpire"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:layout_marginTop="2.0dip"
        android:gravity="center"
        android:text="@string/empire"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/text" />
  </RelativeLayout>
</LinearLayout>
