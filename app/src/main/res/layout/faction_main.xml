<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/dim_10"
    android:background="@color/background"
    android:layout_gravity="center"
    android:gravity="center_vertical|center_horizontal">

    <com.stryksta.swtorcentral.util.CircleTextView
        android:id="@+id/test_check"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:ctv_text="50"
        app:ctv_textSize="20dp"
        app:ctv_selected="true"
        app:ctv_textColor="@color/white"
        app:ctv_backgroundColor="@color/swtor_blue"
        android:layout_gravity="center" />

    <android.support.v7.widget.CardView
        android:id="@+id/layoutRepublic"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        app:cardElevation="2dp"
        app:cardCornerRadius="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:foreground="@drawable/card_foreground"
        app:cardPreventCornerOverlap="false"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dim_10"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/imgRepublic"
                android:layout_width="@dimen/fab_xlarge"
                android:layout_height="@dimen/fab_xlarge"
                android:padding="8dp"
                android:background="@drawable/round"
                android:elevation="3dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_republic"
                android:layout_centerVertical="true"

                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/txtRepublic"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/republic"
                android:textSize="32dp"
                android:textColor="@color/text"
                android:layout_below="@+id/imgRepublic"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/layoutEmpire"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        app:cardElevation="2dp"
        app:cardCornerRadius="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:foreground="@drawable/card_foreground"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dim_10"
            android:layout_centerVertical="true"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/imgEmpire"
                android:layout_width="@dimen/fab_xlarge"
                android:layout_height="@dimen/fab_xlarge"
                android:padding="8dp"
                android:background="@drawable/round"
                android:elevation="3dp"
                android:layout_gravity="center"
                android:clickable="false"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_empire"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/txtEmpire"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/empire"
                android:textSize="32dp"
                android:textColor="@color/text"
                android:layout_below="@+id/imgEmpire" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
