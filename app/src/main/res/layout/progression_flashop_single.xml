<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/background"
              android:orientation="vertical"
              android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">


        <com.stryksta.swtorcentral.ui.views.timeline.RoundTimelineView
            android:id="@+id/timeline"
            android:layout_width="30dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            app:firstColor="@color/md_grey_700"
            app:firstSize="15"
            app:lastColor="@color/md_grey_700"
            app:lastSize="15"
            app:lineColor="@color/md_grey_700"
            app:lineWidth="10dp"
            app:middleColor="@color/md_grey_700"
            app:middleSize="15"
            app:timeline_type="line"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayoutEmpire"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageButton
                android:id="@+id/imgIcon"
                android:layout_width="@dimen/fab_small"
                android:layout_height="@dimen/fab_small"
                android:background="@drawable/round_grey"
                android:paddingBottom="@dimen/dim_5"
                android:elevation="3dp"
                android:scaleType="fitCenter"
                android:padding="3dp"
                android:clickable="false"
                android:src="@drawable/ic_flashpoint"
                android:tint="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"/>

            <com.stryksta.swtorcentral.ui.views.bubbleview.BubbleLinearLayout
                android:orientation="vertical"
                app:arrowWidth="0dp"
                app:angle="0dp"
                app:arrowHeight="0dp"
                app:bubbleColor="@color/background"
                android:id="@+id/bubble_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/flashpointName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_5"
                    android:paddingLeft="@dimen/dim_5"
                    android:paddingRight="@dimen/dim_5"
                    android:text="Vaiken Spacedock"
                    android:gravity="right"
                    android:textColor="@color/text"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/flashpointTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dim_5"
                    android:paddingRight="@dimen/dim_5"
                    android:layout_marginBottom="@dimen/dim_5"
                    android:text="Imperial Fleet"
                    android:textColor="@color/subheader"
                    android:gravity="right"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"/>

            </com.stryksta.swtorcentral.ui.views.bubbleview.BubbleLinearLayout>

        </LinearLayout>




    </RelativeLayout>
</LinearLayout>