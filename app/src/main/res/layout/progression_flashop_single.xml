<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/background"
              android:orientation="vertical"
              android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/cardview_background_center">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:clickable="false"
        android:foreground="@drawable/card_foreground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.stryksta.swtorcentral.ui.views.timeline.RoundTimelineView
            android:id="@+id/timeline"
            android:layout_width="30dp"
            android:layout_height="125dp"
            android:layout_gravity="center_horizontal"
            app:firstColor="@color/md_grey_700"
            app:firstSize="15"
            app:lastColor="@color/md_grey_700"
            app:lastSize="15"
            app:lineColor="@color/md_grey_700"
            app:lineWidth="10dp"
            app:middleColor="@color/md_grey_700"
            app:middleSize="15"
            app:timeline_type="line"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:id="@+id/imgIcon"
            android:layout_width="@dimen/fab_small"
            android:layout_height="@dimen/fab_small"
            android:background="@drawable/round_grey"
            android:paddingBottom="@dimen/dim_5"
            android:elevation="3dp"
            android:scaleType="fitCenter"
            android:padding="3dp"
            android:clickable="false"
            android:src="@drawable/ic_flashpoint"
            android:tint="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@+id/linearLayout"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dim_5"
            android:layout_marginLeft="@dimen/dim_5"
            android:layout_toRightOf="@+id/imgIcon"
            android:layout_toEndOf="@+id/imgIcon">

            <TextView
                android:id="@+id/flashpointName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dim_5"
                android:paddingRight="@dimen/dim_5"
                android:text="Vaiken Spacedock"
                android:gravity="left"
                android:textColor="@color/text"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/flashpointTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dim_5"
                android:paddingRight="@dimen/dim_5"
                android:text="Imperial Fleet"
                android:textColor="@color/subheader"
                android:gravity="left"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"/>

        </LinearLayout>


    </RelativeLayout>

    </android.support.v7.widget.CardView>
        </LinearLayout>
</LinearLayout>