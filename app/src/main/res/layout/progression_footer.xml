<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center_horizontal">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:clickable="false"
        android:foreground="@drawable/card_foreground">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.stryksta.swtorcentral.ui.views.timeline.RoundTimelineView
                android:id="@+id/timeline"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                app:firstColor="@color/md_grey_700"
                app:firstSize="15"
                app:lastColor="@color/md_grey_700"
                app:lastSize="15"
                app:lineColor="@color/md_grey_700"
                app:lineWidth="10dp"
                app:middleColor="@color/md_grey_700"
                app:middleSize="0"
                app:timeline_type="line" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.stryksta.swtorcentral.ui.views.timeline.RoundTimelineView
        android:id="@+id/timeline2"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal"
        app:firstColor="@color/md_grey_600"
        app:firstSize="15"
        app:lastColor="@color/md_grey_600"
        app:lastSize="15"
        app:lineColor="@color/md_grey_600"
        app:lineWidth="10dp"
        app:middleColor="@color/md_grey_600"
        app:middleSize="0"
        app:timeline_type="line" />
</LinearLayout>