<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="horizontal">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.stryksta.swtorcentral.util.timeline.RoundTimelineView
        android:id="@+id/timeline"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        app:firstColor="@color/subheader"
        app:firstSize="15"
        app:lastColor="@color/subheader"
        app:lastSize="15"
        app:lineColor="@color/subheader"
        app:lineWidth="10dp"
        app:middleColor="@color/subheader"
        app:middleSize="15"
        app:timeline_type="line" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            app:cardCornerRadius="2dp"
            app:cardPreventCornerOverlap="false"
            android:foreground="@drawable/card_foreground"
            app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:id="@+id/txtInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        
        <TextView
            android:id="@+id/txtPlanet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/text"
            android:text="Tython"
            android:textSize="24sp"
            android:layout_toRightOf="@+id/imgPlanet"
            android:layout_toEndOf="@+id/imgPlanet" />

        <ImageView
            android:id="@+id/imgPlanet"
            android:layout_width="150.0dip"
            android:layout_height="150.0dip"
            android:clickable="false"
            android:padding="5.0dp"
            android:contentDescription="@string/image_placeholder"
            android:src="@drawable/pl_tython"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txtLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/subtext"
            android:text="Levels 1 - 10"
            android:textSize="14sp"
            android:layout_below="@+id/txtPlanet"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/txtPlanet"
            android:layout_alignStart="@+id/txtPlanet" />

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/subtext"
            android:text="@string/lorum"
            android:layout_marginTop="@dimen/dim_10"
            android:maxLines="4"
            android:paddingRight="@dimen/dim_5"
            android:ellipsize="end"
            android:textSize="14sp"
            android:layout_below="@+id/txtLevel"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/imgPlanet"
            android:layout_toEndOf="@+id/imgPlanet" />
    </RelativeLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>

</LinearLayout>