<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:elevation="2dp"
        app:cardCornerRadius="2dp"
        app:cardPreventCornerOverlap="false"
        android:clickable="true"
        android:foreground="@drawable/card_foreground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewNews"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_sorcerer"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/md_text_title"
                    android:focusableInTouchMode="false"
                    android:fontFamily="sans-serif"
                    android:text="dsfasdfasdfasdf"/>

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/subtext_dark"
                    android:textSize="@dimen/md_text_body"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-light"
                    android:text="sdaflpwejropqwijruf;alsfjaso;dfjiaso;ifuapsofjasopdfjasopdfjiaso;dlfjasodfjasopdfjiaops45344v52354fg52364455fgv5456v45642v35456423456243562442523465v5423654236552365nrqwel;rj"/>

                <TextView
                    android:id="@+id/lblNewsTag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/swtor_accent"
                    android:textSize="14dp"
                    android:gravity="right"
                    android:fontFamily="sans-serif-light"
                    android:text="News"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>