                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dim_5"
                            android:layout_marginLeft="@dimen/dim_5"
                            android:layout_toLeftOf="@+id/imgIcon1"
                            android:layout_toStartOf="@+id/imgIcon1">

                            <TextView
                                android:id="@+id/txtFlashRepublicName1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Carrick Station"
                                android:gravity="right"
                                android:layout_gravity="right"
                                android:textColor="@color/text"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"/>
                            <TextView
                                android:id="@+id/txtFlashRepublicTitle1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Republic Fleet"
                                android:gravity="right"
                                android:layout_gravity="right"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif-light"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutEmpireFlash1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dim_5"
                            android:layout_marginRight="@dimen/dim_5"
                            android:layout_toRightOf="@+id/imgIcon1"
