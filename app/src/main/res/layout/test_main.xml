                            app:lastColor="@color/md_grey_700"
                            app:lastSize="15"
                            app:lineColor="@color/md_grey_700"
                            app:lineWidth="10dp"
                            app:middleColor="@color/md_grey_700"
                            app:middleSize="15"
                            app:timeline_type="middle"
                            android:layout_centerHorizontal="true" />

                        <ImageButton
                            android:id="@+id/imgIcon2"
                            android:layout_width="@dimen/fab_small"
                            android:layout_height="@dimen/fab_small"
                            android:background="@drawable/round_grey"
                            android:elevation="3dp"
                            android:layout_centerVertical="true"
                            android:scaleType="fitCenter"
                            android:padding="5dp"
                            android:clickable="false"
                            android:src="@drawable/ic_flashpoint"
                            android:tint="@color/white"
                            android:layout_centerHorizontal="true"/>

                        <LinearLayout
                            android:id="@+id/linearLayoutRepublicFlash2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dim_5"
                            android:layout_marginLeft="@dimen/dim_5"
                            android:layout_toLeftOf="@+id/imgIcon2"
                            android:layout_toStartOf="@+id/imgIcon2">

                            <TextView
                                android:id="@+id/txtFlashRepublicName2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="The Esseles"
                                android:gravity="right"
                                android:layout_gravity="right"
                                android:textColor="@color/text"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif"/>
                            <TextView
                                android:id="@+id/txtFlashRepublicTitle2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Flashpoint"
                                android:gravity="right"
                                android:layout_gravity="right"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif-light"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutEmpireFlash2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dim_5"
                            android:layout_marginRight="@dimen/dim_5"
                            android:layout_toRightOf="@+id/imgIcon2"
                            android:layout_toEndOf="@+id/imgIcon2">

                            <TextView
                                android:id="@+id/txtFlashEmpireName2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
