<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/background"
              android:orientation="vertical"
              android:fitsSystemWindows="true">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_10"
        android:layout_marginLeft="@dimen/dim_10"
        android:layout_marginRight="@dimen/dim_10">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardElevation="2dp"
                app:cardCornerRadius="2dp"
                android:clickable="false"
                android:foreground="@drawable/card_foreground">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtSection1"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:singleLine="true"
                        android:textAllCaps="true"
                        android:textColor="@color/swtor_blue"
                        android:background="@android:color/transparent"
                        android:text="Prologue"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:id="@+id/relLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.stryksta.swtorcentral.ui.views.timeline.RoundTimelineView
                            android:id="@+id/timeline1"
                            android:layout_width="20dp"
                            android:layout_height="125dp"
                            android:layout_gravity="center_horizontal"
                            app:firstColor="@color/md_grey_700"
                            app:firstSize="10"
                            app:lastColor="@color/md_grey_700"
                            app:lastSize="10"
                            app:lineColor="@color/md_grey_700"
                            app:lineWidth="10dp"
                            app:middleColor="@color/md_grey_700"
                            app:middleSize="0"
                            app:timeline_type="start"
                            android:layout_centerHorizontal="true" />

                        <LinearLayout
                            android:id="@+id/linearLayoutRepublic1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/timeline1"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">

                            <LinearLayout
                                android:id="@+id/linearLayout1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtPlanetRepublic1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Tython"
                                    android:gravity="right"
                                    android:textColor="@color/text"
                                    android:textSize="16sp"
                                    android:fontFamily="sans-serif"/>

                                <TextView
                                    android:id="@+id/txtLevelRepublic1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Levels 1 - 10"
                                    android:gravity="right"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-light"/>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/imgPlanetRepublic1"
                                android:layout_width="75.0dip"
                                android:layout_height="75.0dip"
                                android:clickable="false"
                                android:layout_gravity="right"
                                android:contentDescription="@string/image_placeholder"
                                android:src="@drawable/pl_tython"
                                android:scaleType="fitCenter" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayoutEmpire1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="left"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/timeline1"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true">

                            <ImageView
                                android:id="@+id/imgPlanetEmpire1"
                                android:layout_width="75.0dip"
                                android:layout_height="75.0dip"
                                android:clickable="false"
                                android:contentDescription="@string/image_placeholder"
                                android:layout_gravity="left"
                                android:src="@drawable/pl_korriban"
                                android:scaleType="fitCenter" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtPlanetEmpire1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Korriban"
                                    android:gravity="left"
                                    android:textColor="@color/text"
                                    android:textSize="16sp"
                                    android:fontFamily="sans-serif"/>

                                <TextView
                                    android:id="@+id/txtLevelEmpire1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Levels 1 - 10"
                                    android:gravity="left"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-light"/>
                            </LinearLayout>

                        </LinearLayout>
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/relLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.stryksta.swtorcentral.ui.views.timeline.RoundTimelineView
                            android:id="@+id/timeline2"
                            android:layout_width="20dp"
                            android:layout_height="125dp"
                            android:layout_gravity="center_horizontal"
                            app:firstColor="@color/md_grey_700"
                            app:firstSize="10"
                            app:lastColor="@color/md_grey_700"
                            app:lastSize="10"
                            app:lineColor="@color/md_grey_700"
                            app:lineWidth="10dp"
                            app:middleColor="@color/md_grey_700"
                            app:middleSize="0"
                            app:timeline_type="line"
                            android:layout_centerHorizontal="true" />

                        <LinearLayout
                            android:id="@+id/linearLayoutRepublic2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/timeline2"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true">

                            <LinearLayout
                                android:id="@+id/linearLayout2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtPlanetRepublic2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ord Mantell"
                                    android:gravity="right"
                                    android:textColor="@color/text"
                                    android:textSize="16sp"
                                    android:fontFamily="sans-serif"/>

                                <TextView
                                    android:id="@+id/txtLevelRepublic2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Levels 1 - 10"
                                    android:gravity="right"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-light"/>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/imgPlanetRepublic2"
                                android:layout_width="75.0dip"
                                android:layout_height="75.0dip"
                                android:clickable="false"
                                android:layout_gravity="right"
                                android:contentDescription="@string/image_placeholder"
                                android:src="@drawable/pl_ord_mantell"
                                android:scaleType="fitCenter" />

