                                <TextView
                                    android:id="@+id/txtLevelRepublic3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Levels 1 - 10"
                                    android:gravity="right"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif-light"/>
