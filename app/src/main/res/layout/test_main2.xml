<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:id="@+id/coordinator"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/swtor_blue"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/ctlLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/swtor_blue"
            app:expandedTitleTextAppearance="@style/TransparentText"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:paddingBottom="32dp"
                android:layout_marginTop="?actionBarSize"
                android:fitsSystemWindows="true"
                android:orientation="horizontal"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/imgClass"
                    android:layout_width="@dimen/fab_medium"
                    android:layout_height="@dimen/fab_medium"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/ic_achievement"
                    android:tint="@color/white"
                    android:background="@drawable/round_grey_bordered"
                    android:padding="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/dim_40">

                    <TextView
                        android:id="@+id/txtClass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:maxLines="1"
                        android:textSize="26sp"
                        android:text="Achievements"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif"/>

                    <TextView
                        android:id="@+id/txtFaction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginLeft="5dp"
                        android:maxLines="1"
                        android:textSize="18sp"
                        android:text="15295 / 273880"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-light"/>
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_overlapTop="35dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
        android:layout_gravity="fill_vertical"
        android:layout_marginBottom="?actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardElevation="2dp"
                app:cardCornerRadius="2dp"
                android:clickable="true"
                android:foreground="@drawable/card_foreground"
                android:layout_marginRight="@dimen/dim_10"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:textColor="@color/text"
                    android:gravity="center"
                    android:text="@string/test_profile_desc"
                    android:layout_margin="10dp"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-light"/>

                </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/dim_10"
                android:layout_marginLeft="@dimen/dim_10"
                android:padding="@dimen/dim_5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ablImage"
                    android:layout_width="@dimen/fab_mini"
                    android:layout_height="@dimen/fab_mini"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_filter" />

                <TextView
                    android:id="@+id/serverPopulation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dim_10"
                    android:layout_gravity="center"
                    android:text="Filter By"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"/>

                <com.stryksta.swtorcentral.ui.views.chipcloud.ChipCloud
                    xmlns:chipcloud="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/chip_cloud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    chipcloud:deselectedColor="@color/swtor_blue"
                    chipcloud:deselectedFontColor="@color/white"
                    chipcloud:selectedColor="@color/swtor_blue_dark"
                    chipcloud:selectedFontColor="@color/white"
                    chipcloud:cornerRadius="2dp"
                    chipcloud:selectMode="required"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="13dp"
                android:layout_width="150dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/cardview_background_top">
            </LinearLayout>

            <LinearLayout
                android:layout_height="25dp"
                android:layout_width="150dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/cardview_background_center">
            </LinearLayout>

            <LinearLayout
                android:layout_height="12dp"
                android:layout_width="150dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/cardview_background_bottom">
            </LinearLayout>


            <com.stryksta.swtorcentral.ui.views.timeline.RoundTimelineView
                android:id="@+id/timeline1"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                app:firstColor="@color/md_grey_600"
                app:firstSize="15"
                app:lastColor="@color/md_grey_600"
                app:lastSize="15"
                app:lineColor="@color/md_grey_600"
                app:lineWidth="10dp"
                app:middleColor="@color/md_grey_600"
                app:middleSize="0"
                app:timeline_type="line" />

            <android.support.v7.widget.CardView
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                app:cardElevation="2dp"
                app:cardCornerRadius="2dp"
                app:cardPreventCornerOverlap="false">

            </android.support.v7.widget.CardView>

            <com.stryksta.swtorcentral.ui.views.timeline.RoundTimelineView
                android:id="@+id/timeline2"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginTop="-3dp"
                android:layout_gravity="center_horizontal"
                app:firstColor="@color/md_grey_600"
                app:firstSize="15"
                app:lastColor="@color/md_grey_600"
                app:lastSize="15"
                app:lineColor="@color/md_grey_600"
                app:lineWidth="10dp"
                app:middleColor="@color/md_grey_600"
                app:middleSize="0"
                app:timeline_type="line" />
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>