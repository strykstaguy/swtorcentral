<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Swtor" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_swtor</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Swtor</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Swtor</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Swtor</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Swtor</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Swtor</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_swtor</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_swtor</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Swtor</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Swtor.Widget</item>

    </style>
    
	<style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_swtor</item>
        <item name="android:icon">@drawable/ic_swtor_icon</item>
    </style>

    <style name="Widget.ActionBar.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="ActionBar.Solid.Swtor" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_swtor</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_swtor</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_swtor</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Swtor</item>
        <item name="android:icon">@drawable/ic_swtor_icon</item>
    </style>

    <style name="ActionBar.Transparent.Swtor" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_swtor</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Swtor</item>
    </style>

    <style name="PopupMenu.Swtor" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_swtor</item>	
    </style>

    <style name="DropDownListView.Swtor" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_swtor</item>
    </style>

    <style name="ActionBarTabStyle.Swtor" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_swtor</item>
    </style>
    
    <!-- ActionBar tabs text styles -->
    <style name="ActionBarTabText.Swtor" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/tab_text_color</item>
    </style>
	
    <style name="PagerTitleStrip">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#33b5e5</item>
    </style>

    <style name="DropDownNav.Swtor" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_swtor</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_swtor</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_swtor</item>
    </style>
    
    <style name="ProgressBar.Swtor" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_swtor</item>
    </style>
    
    <style name="ActionButton.CloseMode.Swtor" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_swtor</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Swtor.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Swtor</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Swtor</item>
    </style>
	
    <style name="TwoWayView">
    	<item name="android:orientation">horizontal</item>
	</style>
	
    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
    	<item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_horizontal</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
    <style name="CustomProgressBarCircle" parent="android:Widget.ProgressBar.Horizontal">
    	<item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar_circle</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
    
    <style name="Widget.SWTOR.Material.Dialog.Message" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/material_message</item>
        <item name="android:textColor">@color/material_dialog_message</item>
        <item name="android:alpha">.54</item>
        <item name="android:lineSpacingMultiplier">1.15</item>
    </style>
    
    <style name="Widget.SWTOR.Material.Dialog.Title" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/material_title</item>
        <item name="android:textColor">@color/material_dialog_title</item>
        <item name="android:alpha">.87</item>
        <item name="android:layout_margin">@dimen/material_spacing</item>
    </style>
    
    <style name="Widget.SWTOR.Material.Dialog.Button" parent="android:Widget.TextView">
        <item name="android:layout_width">@dimen/material_button_width</item>
        <item name="android:layout_height">@dimen/material_button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/material_button_text</item>
        <item name="android:textColor">@color/material_dialog_button_default</item>
        <item name="android:alpha">.87</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/material_button_selector</item>
    </style>
</resources>