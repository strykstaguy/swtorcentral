<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >
   	
	<LinearLayout
        android:id="@+id/planetBackground"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="150.0dip" >

     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="150.0dip"
         android:gravity="bottom"
         android:orientation="horizontal" >

         <TextView
             android:id="@+id/txtLevels"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:background="@drawable/title_background"
             android:paddingTop="5dp"
             android:paddingBottom="4dp"
             android:paddingLeft="4dp"
             android:paddingRight="4dp"
             android:text="Levels: 1 to 10"
             android:textColor="@color/white"
             android:textSize="20sp" />

         <ImageView
             android:id="@+id/imgDatacron"
             android:layout_width="36.0dip"
             android:layout_height="36.0dip"
             android:padding="2dp"
             android:background="@drawable/title_background"
             android:contentDescription="@string/image_placeholder"
             android:gravity="bottom|right"
             android:scaleType="fitCenter"
             android:src="@drawable/faction_both_white" />
     </LinearLayout>

</LinearLayout>

<android.support.v4.view.ViewPager
    android:id="@+id/planet_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <android.support.v4.view.PagerTabStrip
        android:id="@+id/planet_title_strip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/gray_23"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

</android.support.v4.view.ViewPager>
</LinearLayout>