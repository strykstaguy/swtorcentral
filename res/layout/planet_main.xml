<?xml version="1.0" encoding="utf-8"?>
<com.stryksta.swtorcentral.util.NotifyingScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/planetScollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:focusable="false"
    android:focusableInTouchMode="true"
    >
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:background="@color/background"
    	android:orientation="vertical"
    	android:layout_marginLeft="10dp"
    	android:layout_marginTop="10dp" 
    	android:layout_marginBottom="10dp" 
    	android:layout_marginRight="10dp"  >
		
    	<TextView
 	    	android:id="@+id/txtPlanetTitle"
 	    	android:layout_width="wrap_content"
 	    	android:layout_height="wrap_content"
 	    	android:layout_gravity="center"
 	    	android:textColor="@color/text"
 	    	android:textSize="20dp" />
 	
 		<TextView
        	android:id="@+id/txtPlanetSubTitle"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        	android:textColor="@color/subtext"
        	android:text="@string/informationsub"
        	android:textSize="14dp"
        	android:paddingBottom="5dp" />
 			
 		<TextView
        	android:id="@+id/txtDescription"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="@drawable/card_background"
			android:padding="5dp"
        	android:textColor="@color/text"
        	android:gravity="left"
        	android:textSize="16sp" />
 			
 		<TextView
 	    	android:id="@+id/txtDatacronTitle"
 	    	android:layout_width="wrap_content"
 	    	android:layout_height="wrap_content"
 	    	android:layout_gravity="center"
 	    	android:textColor="@color/text"
 	    	android:textSize="20dp"
 	    	android:layout_marginLeft="10dp"
    		android:layout_marginTop="10dp" 
    		android:layout_marginRight="10dp" />
 	
 		<TextView
        	android:id="@+id/txtDatacronSubTitle"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        	android:textColor="@color/subtext"
        	android:text="@string/datacronsub"
        	android:textSize="14dp"
        	android:paddingBottom="5dp" />
 			
 		<com.stryksta.swtorcentral.util.NonScrollListView
       		android:id="@+id/lstDatacron"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:background="@drawable/card_background"
			android:padding="5dp" />
	</LinearLayout>
</com.stryksta.swtorcentral.util.NotifyingScrollView>