<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/planetBackground"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="175.0dip" >
	</LinearLayout>
	
    <ScrollView
        android:id="@+id/planetScrollView"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:focusable="false"
		android:scrollbarStyle="outsideInset"
    	android:paddingTop="10dp"
    	android:paddingLeft="10dp" 
    	android:paddingBottom="10dp"  >
    
        <LinearLayout
    		android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:background="@color/background"
    		android:orientation="vertical" >
    		<TextView
 	    		android:id="@+id/txtPlanetTitle"
 	    		android:layout_width="wrap_content"
 	    		android:layout_height="wrap_content"
 	    		android:layout_gravity="center"
 	    		android:textColor="@color/text"
 	    		android:textSize="20dp" />
 	
 			<TextView
        		android:id="@+id/txtPlanetSubTitle"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="center"
        		android:textColor="@color/subtext"
        		android:text="@string/informationsub"
        		android:textSize="14dp"
        		android:paddingBottom="5dp" />
 			
 			<TextView
        		android:id="@+id/txtDescription"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:background="@drawable/card_background"
				android:padding="5dp"
        		android:textColor="@color/text"
        		android:gravity="left"
        		android:textSize="16sp" />
 			
 			<TextView
 	    		android:id="@+id/txtDatacronTitle"
 	    		android:layout_width="wrap_content"
 	    		android:layout_height="wrap_content"
 	    		android:layout_gravity="center"
 	    		android:textColor="@color/text"
 	    		android:textSize="20dp" />
 	
 			<TextView
        		android:id="@+id/txtDatacronSubTitle"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_gravity="center"
        		android:textColor="@color/subtext"
        		android:text="@string/datacronsub"
        		android:textSize="14dp"
        		android:paddingBottom="5dp" />
 			
 			<com.stryksta.swtorcentral.util.NonScrollListView
       			android:id="@+id/lstDatacron"
        		android:layout_width="fill_parent"
        		android:layout_height="fill_parent"
        		android:background="@drawable/card_background"
				android:padding="5dp" />
 		</LinearLayout>
	</ScrollView>
	
</LinearLayout>