<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_weight="1"
    android:orientation="vertical" >
	
    <TextView
        android:id="@+id/txtTimeLineLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:textColor="@color/subtext"
        android:textSize="16sp" />
    
    <com.stryksta.swtorcentral.util.RoundTimelineView
        android:id="@+id/timeline"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        app:firstColor="@color/text"
        app:firstSize="5"
        app:lastColor="@color/text"
        app:lastSize="5"
        app:lineColor="@color/text"
        app:lineWidth="5dp"
        app:middleColor="@color/text"
        app:middleSize="5"
        app:timeline_type="line" />
    
    <LinearLayout
        android:id="@+id/layoutSinglePlanet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background_middle" 
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip" >
		
        <ImageView
        	android:id="@+id/imgPlanet"
        	android:layout_width="96.0dip"
        	android:layout_height="96.0dip"
        	android:clickable="false"
        	android:layout_gravity="center"
        	android:layout_marginTop="2.0dip"
        	android:background="@color/white"
        	android:contentDescription="@string/image_placeholder"
        	android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/txtPlanet"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
		
        <TextView
            android:id="@+id/txtLevel"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
        
    </LinearLayout>

</LinearLayout>
